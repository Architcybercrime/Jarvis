# ============================================
# JARVIS Environment Variables Template
# ============================================
# NOTE: Never commit .env with real keys!
# Copy to .env and fill in real values

# OpenAI API Keys
OPENAI_API_KEY=sk-xxx...
OPENAI_MODEL=gpt-4

# ElevenLabs (Voice Cloning)
ELEVENLABS_API_KEY=xxx...
ELEVENLABS_VOICE_ID=xxx...

# Porcupine (Wake Word Detection)
PORCUPINE_ACCESS_KEY=xxx...

# Backend
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_DEBUG=True

# Database
DATABASE_URL=sqlite:///jarvis.db
DATABASE_ECHO=False

# Android Device
ANDROID_DEVICE_ID=192.168.1.100
ANDROID_ADB_PORT=5037

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/jarvis.log

# Feature Flags
USE_LOCAL_WHISPER=True
USE_LOCAL_LLM=False
STREAMING_TTS=True
